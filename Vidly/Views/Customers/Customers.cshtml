@model List<Vidly.Models.CustomerViewModel>
<h1>Customers</h1>
@if (!Model.Any())
{
    <p>We don't have any customers yet</p>
}
else
{

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Age</th>
                <th scope="col">Phone</th>
            </tr>
        </thead>
        <tbody>
            @{int index = 1;}
            @foreach (var customer in Model)
            {
                <tr>
                    <th scope="row">@index</th>
                    @{index += 1;}
                    <td><a href="Customers/Detailes/@customer.Id">@customer.Name</a></td>
                    <td>@customer.Age</td>
                    <td>@customer.phone</td>
                </tr>
            }

        </tbody>
    </table>
}